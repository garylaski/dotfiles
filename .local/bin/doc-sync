#!/bin/sh
if [ $1 = "push" ]; then
	rsync -rvcz ~/docs/ $SERVER_USER@$SERVER_ADDRESS:/docs/
	exit 0
elif [ $1 = "pull" ]; then 
	rsync -rvcz $SERVER_USER@$SERVER_ADDRESS:/docs/ ~/docs/
	exit 0
elif [ $1 = "delete" ]; then 
	rsync -rvczb --delete --backup-dir=/docsold ~/docs/ $SERVER_USER@$SERVER_ADDRESS:/docs/
	exit 0
fi
exit 1

